                    <input type="text" size="22" placeholder="Email" name="email">
                    <input type="text" size="22" placeholder="Τηλέφωνο" name="phone">
                    <input type="text" size="22" placeholder="Κωδικός" name="password">
                    <input type="text" size="22" placeholder="Επαλήθευση Κωδικού" name="password2">
                    <button type="submit">sign in</button>
                </form>
            </div>
        </div>
    </div>
